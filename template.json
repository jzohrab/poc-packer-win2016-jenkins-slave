{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "region": "",
        "instance_type": "",
        "repo": "{{env `REPO`}}",
        "sha": "{{env `SHA`}}"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `region`}}",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "*Windows_Server-2016-English-Full-Base*",
                "root-device-type": "ebs"
            },
            "owners": ["amazon"],
            "most_recent": true
        },
        "instance_type": "{{user `instance_type`}}",
        "ami_name": "windows-msbuild {{timestamp}}",
        "tags": {
          "cluster": "jenkins",
          "vcs-repo": "{{user `repo`}}",
          "vcs-sha": "{{user `sha`}}"
        },
        "user_data_file": "./ec2-userdata.ps1",
        "communicator": "winrm",
        "winrm_username": "Administrator",
        "winrm_use_ssl": true,
        "winrm_insecure": true,
        "disable_stop_instance": "true"
    }],

    "provisioners": [
        {
            "type": "powershell",
            "script": "provision.ps1"
        },
	{
            "type": "powershell",
            "script": "aws_ec2launch.ps1"
        }

    ]
}
